@model IdentityMVCApp.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-9 col-lg-7">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <h3 class="mb-1">Create account</h3>
                <p class="text-muted mb-4">Fill your details to register</p>

                <form asp-action="Register" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    <!-- Model-level validation summary -->
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="UserName" class="form-label"></label>
                            <input asp-for="UserName" class="form-control" placeholder="Username" autocomplete="username" />
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="First name" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" placeholder="Last name" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Age" class="form-label"></label>
                            <input asp-for="Age" type="number" class="form-control" min="1" max="120" />
                            <span asp-validation-for="Age" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" placeholder="Password" autocomplete="new-password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm" autocomplete="new-password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success w-100 mt-4">
                        Create account
                    </button>

                    <div class="text-center mt-3">
                        <a class="btn btn-link p-0" asp-action="Login">Already have an account? Login</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3 text-muted">
            <small>Tip: Use a strong password with letters, numbers, and symbols.</small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
