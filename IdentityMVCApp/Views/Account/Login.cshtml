@model IdentityMVCApp.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="ReturnUrl" />

    <div class="mb-3">
        <label asp-for="UserNameOrEmail" class="form-label"></label>
        <input asp-for="UserNameOrEmail" class="form-control" />
        <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
    <a class="btn btn-link" asp-action="Register">Create new account</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
