@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="mb-0">Dashboard</h3>
        <div class="text-muted">Welcome back</div>
    </div>
    <span class="badge bg-light text-dark border px-3 py-2">
        @User.Identity?.Name
    </span>
</div>

<div class="alert alert-success d-flex justify-content-between align-items-center">
    <div>
        Welcome, <b>@User.Identity?.Name</b>
        <div class="small text-muted">You are signed in successfully.</div>
    </div>
    <a class="btn btn-outline-success btn-sm" asp-controller="Home" asp-action="Index">Go Home</a>
</div>

<div class="row g-3">
    <!-- USER CARD -->
    <div class="col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h5 class="card-title mb-1">User Options</h5>
                <p class="text-muted mb-3">These options are available for all logged-in users.</p>

                <div class="d-flex gap-2 flex-wrap">
                    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">
                        Home
                    </a>
                    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Privacy">
                        Privacy
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- ADMIN CARD -->
    <div class="col-md-6">
        @if (User.IsInRole("Admin"))
        {
            <div class="card shadow-sm border-danger h-100">
                <div class="card-body">
                    <h5 class="card-title text-danger mb-1">Admin Options</h5>
                    <p class="text-muted mb-3">Only visible to Admin users.</p>

                    <a class="btn btn-danger" asp-controller="AdminUsers" asp-action="Index">
                        Manage Users
                    </a>

                    <div class="mt-3 small text-muted">
                        Tip: You can add/edit users from the admin panel.
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title mb-1">Admin Options</h5>
                    <p class="text-muted mb-3">Admin options are hidden for your account.</p>

                    <div class="alert alert-warning mb-0">
                        You are logged in as <b>non-admin</b>.
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="text-muted mt-3">
    <small>
        If you were just added to the Admin role, logout and login again to refresh role permissions.
    </small>
</div>
