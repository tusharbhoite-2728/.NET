@model List<IdentityMVCApp.Models.ApplicationUser>

@{
    ViewData["Title"] = "Users";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="mb-0">Users</h3>
        <div class="text-muted">Manage application users</div>
    </div>

    <a class="btn btn-success" asp-action="Create">
        + Add User
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="p-4 text-center">
                <h5 class="mb-2">No users found</h5>
                <p class="text-muted mb-3">Start by creating a new user.</p>
                <a class="btn btn-success" asp-action="Create">Add User</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 18%;">UserName</th>
                            <th style="width: 25%;">Email</th>
                            <th style="width: 25%;">Name</th>
                            <th style="width: 10%;">Age</th>
                            <th class="text-end" style="width: 22%;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@u.UserName</td>
                                <td>@u.Email</td>
                                <td>@u.FirstName @u.LastName</td>
                                <td>@u.age</td>
                                <td class="text-end">
                                    <a class="btn btn-outline-primary btn-sm"
                                       asp-action="Edit"
                                       asp-route-id="@u.Id">
                                        Edit
                                    </a>

                                    <a class="btn btn-outline-warning btn-sm"
                                       asp-action="ManageRoles"
                                       asp-route-id="@u.Id">
                                        Roles
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="text-muted mt-3">
    <small>
        Tip: Use <b>Edit</b> to update user profile fields like name and age.
    </small>
</div>
